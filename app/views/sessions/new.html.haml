.wrapper
 %section.clearfix
  - if @session.errors.any?
   .errors
    - @session.errors.full_messages.each do |message|
     %li #{message}
  - if flash[:errors]
   .errors
    %li #{flash[:errors]}
  = form_for @session, url: session_path, html: { class: "login-form" } do |f|
   %h3 Login
   .login-form-column#username
    = f.label :username
    = f.text_field :username
   .login-form-column#password
    = f.label :password
    = f.password_field :password
   #login
    = f.submit "LOGIN", class: "login-button"

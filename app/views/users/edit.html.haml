.wrapper
 %section.clearfix
  - if flash[:notice]
   .notice #{flash[:notice]}
  - if current_user.errors.any?
   .errors
    - current_user.errors.full_messages.each do |message|
     %li #{message}
  = form_for current_user, url: user_path, html: { multipart: true, class: "register-form" } do |f|
   %h3 Edit Profile
   .register-form-column.bottom#username
    = f.label :username
    = f.text_field :username
   .register-form-column.bottom#password
    = f.label :password
    = f.password_field :password
   .register-form-column#first_name
    = f.label :first_name, "First name"
    = f.text_field :first_name
   .register-form-column#last_name
    = f.label :last_name, "Last name"
    = f.text_field :last_name
   #bio
    = f.label :bio
    = f.text_area :bio
   #rant_frequency
    %p How often do you rant?
    .rant_column
     = f.radio_button :rant_frequency, "Daily"
     = f.label :rant_frequency_daily, "Daily"
    .rant_column
     = f.radio_button :rant_frequency, "Weekly"
     = f.label :rant_frequency_weekly, "Weekly"
    .rant_column
     = f.radio_button :rant_frequency, "Monthly?"
     = f.label :rant_frequency_monthly, "Monthly"
   #photo
    = f.label :avatar, "Avatar"
    = f.file_field :avatar
   #register
    = f.submit "EDIT", class: "edit-button"
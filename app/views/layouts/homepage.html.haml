!!!
%html
  %head
    %title Rantly
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %header
      .navbar-logged-out
        %section.clearfix
          = link_to "Rant.ly", root_path, class: "header-word-logo"
          %ul.top-nav
            %li
              = link_to "Login", new_session_path, class: "login-link"
            %li
              = link_to "JOIN", new_user_path, class: "register-button"
    = yield


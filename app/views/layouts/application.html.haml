!!!
%html
  %head
    %title Rantly
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
  - if current_user
    %header
      .navbar-logged-in
        %section.clearfix
          = link_to "Rant.ly", dashboard_path, class: "header-word-logo"
          %ul.top-nav
            %li
              = link_to "Dashboard", dashboard_path, class: "nav-list"
            %li
              = link_to "Following", session_path, class: "nav-list"
            %li
              = link_to "Favorites", session_path, class: "nav-list"
            %li
              = link_to "Search", session_path, class: "nav-list"
            %li
              = link_to "LOGOUT", session_path, class: "logout-button", method: :delete
    = yield
  - else
    %header
      .navbar-logged-out
        %section.clearfix
          = link_to "Rant.ly", root_path, class: "header-word-logo"
          %ul.top-nav
            %li
              = link_to "Login", new_session_path, class: "login-link"
            %li
              = link_to "JOIN", new_registration_path, class: "register-button"
    = yield


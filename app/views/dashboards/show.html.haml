.dashboard-profile
  %section.clearfix
    .profile
      -#= image_tag  , class: "profile-thumbnail"
      = link_to full_name(@user), edit_user_path(@user), id: "profile"
    - if @rant.errors.any?
      .errors
        - @rant.errors.full_messages.each do |message|
          %li #{message}
    = form_for [@user, @rant], html: { class: "new-rant-form" } do |f|
      .category
        = f.label :category, "A rant about:"
        = f.text_field :category
      .rant
        = f.label :rant, "Rant:"
        = f.text_area :rant
      #login
        = f.submit "RANT", class: "create-rant-button"

.dashboard-rants
  %section.clearfix
    .latest_rants
      %h1 "Latest Rants"
      - if @all_rants != nil
        - @all_rants.each do |rant|
          %ul #{rant.user_firstname} #{rant.rant}
          = link_to "Follow"
    .my_rants
      %h1 "My Rants"
      - if @user.rants != nil
        - @user.rants.each do |rant|
          %ul #{rant.user_firstname} #{rant.rant}
          = link_to "Delete", user_rant_path(@user.id, rant.id), id: "delete", method: :delete